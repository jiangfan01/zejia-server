
/* 整个头部的样式 */
.header {
    display: flex;
    justify-content: space-between;
    background: #f3f4f6;
    padding: 20rpx 30rpx;
    border-radius: 24rpx;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    align-items: center; /* 垂直居中 */
}

.status-icon {
    display: flex;
    gap: 12px;
}

/* 位置部分的样式 */
.location-box {
    display: flex;
    gap: 24rpx;
    flex-direction: column;
}

.location-title {
    font-size: 20px;
    color: #333;
    font-weight: bold;
}

.location-text {
    display: flex;
}

.location {
    font-size: 16px;
    color: #555;
    font-weight: normal;
    margin-left: 10rpx; /* 与图标和标题保持间距 */
}

/* 用户信息部分的样式 */
.user-info {
    display: flex;
    align-items: center;

}

.user-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    margin-right: 10rpx; /* 与开关之间的间距 */
}

/* 开关状态文本的样式 */
.status-text {
    font-size: 28rpx;
    color: #67c1b5;
    font-weight: normal;
}

/* 开关的样式调整 */
van-switch {
    /* 增加左右间距 */
    margin: 0 5rpx;
}

.orders-section {
    margin-top: 30rpx;
    background-color: #ffffff;
    padding: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.order-status {
    display: flex;
    justify-content: space-around;
}

.status-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 150rpx;
    transition: transform 0.2s ease-in-out;
}

.status-item:hover {
    transform: scale(1.05);
}

.status-item text {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #666;
}

.content {
    margin-top: 40rpx;
    background: #ffffff;
    padding: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.new-order {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.order-info {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.info-item {
    padding: 20rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.05);
}

.info-title {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 12rpx;
}

.order-list {
    margin-top: 20px;
}

.order-content {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
    font-size: 28rpx;
    color: #555;
}

.order-content text {
    color: #444;
}

/* 搜索框样式 */
.search-section {
    padding: 10px;
    background-color: #f8f8f8;
}

.pop-title {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    margin-top: 20px;
}

.user-info {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 24px;
}

.status-text {
    font-size: 30rpx;
    color: #333;
}

.order-title {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    margin-top: 20px;
}

.search-input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 8px;
}

/* 弹窗内订单样式 */
.popup-container .order-info {
    margin: 20px 0;
}

.info-item {
    padding: 10px;
    border-bottom: 1px solid #ddd;
}

.info-title {
    font-size: 16px;
    font-weight: bold;
}

.order-content {
    margin-top: 5px;
    font-size: 14px;
    color: #666;
}

.order-status-tag {
    margin-top: 10px;
    font-size: 14px;
    font-weight: bold;
}

.completed {
    color: #67c1b5;
}

.order-content .status-text {
    color: #f7a300;
}